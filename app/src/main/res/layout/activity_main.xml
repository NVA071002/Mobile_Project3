<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:background="@color/black"
    android:id="@+id/fireTopLayout"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.project3.UIComponents.CameraReview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.example.project3.UIComponents.GraphicsOverlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/overlay"/>
    </com.example.project3.UIComponents.CameraReview>

    <Button
        android:id="@+id/takePhoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_selector"
        android:enabled="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Take Photo"
        android:textColor="@color/white"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftEyeStatus"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="Please pen Your Left Eye"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightEyeStatus"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="Please pen Your Right Eye "
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"/>
    
        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/test"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:minHeight="100dp"/>
        <com.hsalf.smilerating.SmileRating
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/smile_rating"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"/>


</RelativeLayout>